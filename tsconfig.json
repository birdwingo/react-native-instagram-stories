{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "types": ["react"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "commitlint.config.js",
  ]
}